  <script>
    const form = document.getElementById("waitlistForm");
    const message = document.getElementById("message");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const email = document.getElementById("email").value;
      const url = "https://script.google.com/macros/s/AKfycbx6yjqSrbd6zzPiSAQy5iG304w1h4ogljdTeZtNl9iasZ7rYKBdC9naGDBG_icJj2e2/exec";

      try {
        await fetch(url, {
          method: "POST",
          mode: "no-cors",
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: `email=${encodeURIComponent(email)}`
        });

        message.textContent = "✅ Thanks for joining StageReady!";
        form.reset();

      } catch (err) {
        console.error(err);
        message.textContent = "⚠️ Oops! Something went wrong.";
      }
    });
  </script>
